{
	"lock": false,
	"tasks": {
		"dev": "deno run -A --watch=static/,routes/ dev.ts",
		"build": "deno run -A dev.ts build",
		"preview": "deno run -A main.ts"
	},
	"unstable": [ "kv", "broadcast-channel" ],
	"compilerOptions": { "jsx": "react-jsx", "jsxImportSource": "preact" },
	"fmt": { "useTabs": true },
	"imports": {
		"$fresh/": "https://deno.land/x/fresh@1.7.3/",
		"@std/dotenv": "jsr:@std/dotenv@^0.225.2",
		"@twind/core": "npm:@twind/core@^1.1.3",
		"@twind/preset-autoprefix": "npm:@twind/preset-autoprefix@^1.0.7",
		"@twind/preset-tailwind": "npm:@twind/preset-tailwind@^1.1.4",
		"bad-words": "npm:bad-words@^4.0.0",
		"preact": "npm:preact@^10.24.3",
		"preact-render-to-string": "npm:preact-render-to-string@^6.5.11",
		"@preact/signals": "npm:@preact/signals@^1.3.0",
		"@preact/signals-core": "npm:@preact/signals-core@^1.8.0",
		"twind": "npm:twind@0.16.19",
		"icons/": "https://deno.land/x/tabler_icons_tsx@0.0.7/tsx/"
	},
	"lint": { "rules": { "tags": ["fresh", "recommended"] } },
	"exclude": ["**/_fresh/*"]
}
